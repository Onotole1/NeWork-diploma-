<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setGeoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:backgroundTint="@color/blue"
        app:srcCompat="@drawable/ic_add_24"
        app:layout_constraintBottom_toTopOf="@id/location_searching"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/myLocation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/ic_location"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/locationSearching" />


</androidx.constraintlayout.widget.ConstraintLayout>